      }
      ul:hover{
        background-color: black;
        
      }

      li {
        float : left;
      }

      li a {
        display : block;
        text-decoration : none;
        padding : 8px;
        font-weight : bold;
        font-size : 20px;
        color :rgb(0, 0, 0);
      }

      li a:hover{
        color:rgb(255, 255, 255);
       }

      button{
        border-radius : 20px;
        width : 100px;
        height : 40px;
        font-weight : bold;
      }
      button:hover{
        background-color: black;
        color: white;
      }
      #quickLinks{
        display : flex;
      }
      #quickLinks button{
        margin-left : 10px;
      }
        
  </style>
  <script>
    const addCustomer = function(){
        const a=document.createElement('a');
        a.href='http://localhost:2000/login';
        a.click();
    }
    const updateCustomer = function(){
        const a=document.createElement('a');
        a.href='http://localhost:2000/update';
        a.click();
    }
    const checkId= function(c){
        const a=document.createElement('a');
        a.href=`http://localhost:3000/manager/inActivateManager/${c}`;
        a.click();
    }
    const checkVal= function(c){
        const a=document.createElement('a');
        a.href=`http://localhost:3000/manager/ActivateManager/${c}`;
        a.click();
    }
