</head>
<body>
  <h1>CUSTOMER DETAILS</h1><hr>
  <ul>
    <li> <a href="/">Home</a> </li>
  </ul>

  <br>
  
  <div id="quicklinks">
      <p> quick links : </p>
      <button onclick = 'addCustomer()'> ADD </button>
      <button onclick = 'updateCustomer()'>UPDATE</button>
  </div>
  <table>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Email</th>
      <th>password</th>
      <th>department_id</th>
      <th>contactNumber</th>
      <th>isDeleted</th>
    </tr>
    <% if(results.length > 0)
    { console.log("----",results); 
      let datas = results.rows
      results.forEach(function(datas){
        %>
        <tr > 
          <td onclick="checkId(`<%= datas.id %>`)"><%= datas.id %></td>
          <td><%= datas.name %></td>
          <td><%= datas.email %></td>
          <td><%= datas.password %></td>
          <td><%= datas.department_id %></td>
          <td><%= datas.contactNumber %></td>
          <td onclick="checkVal(`<%= datas.id %>`)"><%= datas.isDeleted %></td>
        
        </tr>
        <%
      });
    }
    else{
      %>
      <tr>
        <td>no data found</td>
      </tr>
      <%
    }
    %>
  </table>
